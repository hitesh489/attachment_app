<%= form_with(model: attachment) do |form| %>
  <% if attachment.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(attachment.errors.count, "error") %> prohibited this attachment from being saved:</h2>

      <ul>
        <% attachment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, required: true %>
  </div>

  <div  class="field">
    <%= form.label :description %>
    <%= form.text_area :description, required: false %>
  </div>

  <div class="field">
    <%= form.label :file, 'Upload your file' %>
    <%= form.file_field :file, required: true %>
  </div>

  <div class="actions">
    <%= form.submit 'Upload Document' %>
  </div>
<% end %>
